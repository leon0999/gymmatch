# ============================================================================
# GymMatch - Environment Variables
# ============================================================================
#
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!
#
# ============================================================================

# ----------------------------------------------------------------------------
# Supabase Configuration
# ----------------------------------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Optional: Service role key (for admin operations, server-side only)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ----------------------------------------------------------------------------
# Stripe Configuration (for Premium subscriptions)
# ----------------------------------------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here

# Stripe Price IDs (create these in Stripe Dashboard)
NEXT_PUBLIC_STRIPE_MONTHLY_PRICE_ID=price_monthly_id_here
NEXT_PUBLIC_STRIPE_YEARLY_PRICE_ID=price_yearly_id_here

# Stripe Webhook Secret (for webhook verification)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ----------------------------------------------------------------------------
# Mapbox Configuration (for location services)
# ----------------------------------------------------------------------------
# Get this from: https://account.mapbox.com/access-tokens/

NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_token_here

# ----------------------------------------------------------------------------
# Analytics (Optional but Recommended)
# ----------------------------------------------------------------------------

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (automatic if deployed on Vercel)
# No env var needed

# Mixpanel (for detailed event tracking)
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here

# ----------------------------------------------------------------------------
# Email Service (for notifications)
# ----------------------------------------------------------------------------

# SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@gymmatch.app

# Or Resend (alternative)
RESEND_API_KEY=re_your_resend_api_key_here

# ----------------------------------------------------------------------------
# Image Upload (Optional - using Supabase Storage by default)
# ----------------------------------------------------------------------------

# Cloudinary (if you want to use instead of Supabase Storage)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# ----------------------------------------------------------------------------
# App Configuration
# ----------------------------------------------------------------------------

# App URL (for OAuth redirects, webhooks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment
NODE_ENV=development

# ----------------------------------------------------------------------------
# Feature Flags (Optional)
# ----------------------------------------------------------------------------

# Enable/disable features during development
NEXT_PUBLIC_ENABLE_PREMIUM=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_WORKOUTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ----------------------------------------------------------------------------
# Rate Limiting (Optional)
# ----------------------------------------------------------------------------

# Redis URL (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# ----------------------------------------------------------------------------
# Testing
# ----------------------------------------------------------------------------

# Test user credentials (for development only)
TEST_USER_EMAIL=test@gymmatch.app
TEST_USER_PASSWORD=test123456

# ----------------------------------------------------------------------------
# Notes
# ----------------------------------------------------------------------------
#
# 1. Development Setup:
#    - Copy this file: cp .env.example .env.local
#    - Fill in Supabase URL and Anon Key (minimum required)
#    - Run: npm run dev
#
# 2. Production Setup (Vercel):
#    - Add all environment variables in Vercel Dashboard
#    - Update NEXT_PUBLIC_APP_URL to your production domain
#    - Use production API keys (not test mode)
#
# 3. Security:
#    - NEVER commit .env.local or .env.production
#    - Add them to .gitignore
#    - Use different keys for dev/staging/production
#    - Rotate keys regularly
#
# ============================================================================
